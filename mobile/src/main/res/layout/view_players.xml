<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/CardView.Light"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/module_2"
    android:layout_marginTop="@dimen/module_2"
    android:transitionName="@string/transition_match"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <com.transition.scorekeeper.mobile.view.component.MatchTeamPlayersView
            android:id="@+id/team_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <View
            android:layout_width="@dimen/module_10"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light"/>

        <View
            android:layout_width="@dimen/module_10"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_light"/>

        <com.transition.scorekeeper.mobile.view.component.MatchTeamPlayersView
            android:id="@+id/team_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</android.support.v7.widget.CardView>